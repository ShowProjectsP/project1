<div class="main-page page-login_reset-passord">

  <form {{ action "resetPassword" on="submit" }}>
    <h1 class="main-h1-header">{{t "Zresetuj hasło" }}</h1>

    {{#if model.resetPasswordDone }}

      <div class="main-doneinfo-container">
        <span class="color-text_green">{{t "Hasło zostało zresetowane" }}</span>
      </div>

      <div class="main-page_form_buttons">
        <button class="button button-wide button-filled color-bg_orange" {{ action "goBack" }}>{{t "Powrót" }}</button>
      </div>

    {{ else }}

      {{ input
        type="password"
        classNames="input"
        classNameBindings="passwordOneError:input-error"
        key-up="validatePasswordOne"
        placeholder=(t "Nowe hasło")
        value=model.passwordOne
      }}

      {{ input
        type="password"
        classNames="input"
        classNameBindings="passwordTwoError:input-error"
        key-up="validatePasswordTwo"
        placeholder=(t "Potwierdź hasło")
        value=model.passwordTwo
      }}

      <div class="main-page_form_buttons">
        <button class="button button-wide button-filled color-bg_orange {{if model.isLoading 'a-button-loading' }}" type="submit">{{t "Zresetuj" }}</button>
      </div>

    {{/if}}
  </form>

  <div class="main-errors-container">
    {{#if emailError }}
      <span class="color-text_red">{{t "Adres email jest wymagany." }}</span>
    {{/if}}
  </div>

</div>
